---
import { type CollectionEntry } from "astro:content";
import CategoryBadge from "./CategoryBadge.astro";

type Props = {
  categories: CollectionEntry<"posts">["data"]["categories"];
  title?: string;
};

const { categories, title } = Astro.props;
---

<div
  class="grid grid-cols-[auto,1fr] gap-x-14 gap-y-3 mb-16 max-lg:grid-cols-1"
>
  {title && <h2 class="font-bold text-5xl text-teal-900">{title}</h2>}
  <div class="flex gap-4 flex-wrap items-center">
    {categories.map((c) => <CategoryBadge category={c} />)}
  </div>
</div>
