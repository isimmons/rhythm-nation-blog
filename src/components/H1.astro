---
import type { HTMLAttributes } from "astro/types";
import { twMerge } from "tailwind-merge";
interface Props extends HTMLAttributes<"h1"> {
  text: string;
  classes?: string;
}

const { text, classes, ...rest } = Astro.props;
---

<h1 {...rest} class={twMerge("text-6xl text-teal-900 font-bold mb-5", classes)}>
  {text}
</h1>
